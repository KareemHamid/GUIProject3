Options -Indexes

RewriteEngine on

# ErrorDocument 404 /error.php

RewriteRule ^$ app/controller/siteController.php?action=home [QSA,L]
RewriteRule ^dashboard/?$ app/controller/siteController.php?action=dashboard [QSA,L]
RewriteRule ^process/?$ app/controller/siteController.php?action=loginProcess [QSA,L]
RewriteRule ^logout/?$ app/controller/siteController.php?action=logout [QSA,L]

# Characters
RewriteRule ^character/view/(\w+)/?$ app/controller/characterController.php?action=view&name=$1 [QSA,L]
RewriteRule ^character/view/(\w+)/relationships/?$ app/controller/characterController.php?action=relationships&name=$1 [QSA,L]
RewriteRule ^character/view/(\w+)/relationships/add/?$ app/controller/characterController.php?action=add&name=$1 [QSA,L]
